---
// Global Styles:
import "@/styles/globals.css";

// Layout:
import Header from "@/components/Header";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

// Page Props:
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="max-w-[90rem] m-auto">
      <main class="flex w-full flex-col items-center gap-52 relative">
        <div class="w-4/5 flex flex-col gap-32 pt-20">
          <Navbar theme={false} toggleTheme={false} />
          <Header />
        </div>
        <img class="absolute -bottom-[62vh] z-[-1]" src="/images/grid.png" />
        <img class="z-[-1] -mt-20" src="/images/phone.png" />
      </main>
      <slot />
      <Footer />
    </div>
  </body>
</html>
